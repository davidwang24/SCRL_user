doctype html
html(lang="eng")
    head
        title SCF Solution
        link(rel='stylesheet' href='/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
        link(rel='icon' href='images/favicon.ico')
    body
        nav.navbar.navbar-expand-md.navbar-dark.fixed-top(style='background-color: #101082;')
            a.navbar-brand(href='/') SCF Solution
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarsExampleDefault.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    if user
                        li.nav-item.dropdown
                            a#dropdown01.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Company
                            .dropdown-menu(aria-labelledby='dropdown01')
                                if(user.stage>=1)
                                    a.dropdown-item(href='/companys') Company Profile
                                if(user.stage==0)
                                    a.dropdown-item(href='/companys/add') Add Company
                        if(user.stage>=2)
                            li.nav-item.dropdown
                                a#dropdown02.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Invoice
                                .dropdown-menu(aria-labelledby='dropdown02')
                                    a.dropdown-item(href='/invoices/add') Add Invoice
                                    a.dropdown-item(href='/invoices') Invoice Details
                                    a.dropdown-item(href='/invoices/confirm') Confirm Invoice
                                    a.dropdown-item(href='/invoices/status') Status Invoice
                            li.nav-item.dropdown
                                a#dropdown02.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Wallet
                                .dropdown-menu(aria-labelledby='dropdown02')
                                    a.dropdown-item(href='/wallets') My Wallet
                                    a.dropdown-item(href='/wallets/transfer') Transfer Token

                ul.nav.navbar-nav.navbar-right
                    if user
                        li.nav-item
                            a.nav-link(href='/users/edit/'+user._id) #{user.name}
                        li.nav-item
                            a.nav-link(href='/users/logout') Logout
                    else
                        li.nav-item
                            a.nav-link(href='/users/register') Register
                        li.nav-item
                            a.nav-link(href='/users/login') Login
        .container-fluid
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
            br
            hr
            footer
                center
                    p Copyright &copy; 2017
        script(src='/js/jquery-3.2.1.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/main.js')
        script(src='http://getbootstrap.com/assets/js/vendor/popper.min.js')
        script(src='http://getbootstrap.com/dist/js/bootstrap.min.js')