extends layout
block content
    center
        h2 Add Invoice
    form(method='POST', action='/invoices/add')
        #form-group
            label(for='Select1') Payee Company Code:
            select#Select1.form-control(name='PayeeCompany')
                - for(var x=0;x<company.length;x++)
                    if(company[x].Account!=id)
                        option #{company[x].CompanyCode}
            label Voucher No:
            input.form-control(name='VoucherNo', type='text')
            label No of Transactions:
            input.form-control(name='NoofTransactions', type='text')
            label Total Amount:
            input.form-control(name='TotalAmount', type='text')
            p Payment Method:
                label
                    input(type='radio', name='Radio', value='Cash')
                    |  by Cash
                label
                    input(type='radio', name='Radio', value='Finance')
                    |  by Finance
            .Cash.box
            .Finance.box
                label Loan Term (Days):
                input.form-control(name='LoanTerm', type='text')
        br
        h3 Upload Invoice Document
        #form-group
            label(for='file') file input
            input#file.form-control-file(type='file' name='InvoiceDocument')
        br
        center
            input.btn.btn-primary(type='submit',value='Submit')
            a.btn.btn-danger(href='../', role='button') Cancel
